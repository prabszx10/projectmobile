<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myAccountFragment"
    android:orientation="vertical"
    android:background="@drawable/background7">

    <RelativeLayout
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background1"
        android:layout_above="@+id/layout_bawah" >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/wbb"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>


        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/corp_bold"
            android:gravity="center"
            android:text="username"
            android:textColor="#000"
            android:textSize="23dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_bawah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_edit"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background22"
            android:text="Edit Profile"
            android:textAlignment="textStart"/>

        <Button
            android:id="@+id/button_aboutUs"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background22"
            android:text="ABOUT DEVELOPERS"
            android:textAlignment="textStart"/>
        <Button
            android:id="@+id/button_cp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background3"
            android:text="Contact Us"
            android:textAlignment="textStart"/>

        <Button
            android:id="@+id/button_pp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background4"
            android:text="Privacy &amp; Policy"
            android:textAlignment="textStart"/>

        <Button
            android:id="@+id/button_help"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Help"
            android:background="@drawable/background5"
            android:textAlignment="textStart"/>

        <Button
            android:id="@+id/button_out"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="Sign Out"
            android:textSize="18dp"
            android:background="@drawable/round_button"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>